{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="card shadow-sm rounded-2xl">
        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
            <h1 class="h2 mb-0">{{ article.title }}</h1>
            <small class="text-muted">{{ article.createdAt | date('d F Y') }}</small>
        </div>
        <div class="card-body">
            <div class="mb-3 text-secondary">
                <span>Auteur&nbsp;: {{ article.user.email }}</span>
                {% if article.artist %}
                    &nbsp;|&nbsp;<span>Artiste&nbsp;: {{ article.artist }}</span>
                {% endif %}
                &nbsp;|&nbsp;<span>{{ article.getLikesCount() }} like{{ article.getLikesCount() > 1 ? 's' }}</span>
            </div>
            <div class="article-content mb-4">
                {{ article.content | raw }}
            </div>

            <div class="d-flex gap-2">
                {% if app.user and (app.user.id == article.user.id or 'ROLE_ADMIN' in app.user.roles) %}
                    <a href="{{ path('app_article_edit', {'slug': article.slug}) }}" class="btn btn-primary">Modifier</a>
                    <form action="{{ path('app_article_delete', {'slug': article.slug}) }}" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                    <form method="post" action="{{ path('app_article_export_pdf', {'slug': article.slug}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('generate-pdf' ~ article.id) }}">
                        <button type="submit" class="btn btn-outline-secondary">Exporter en PDF</button>
                    </form>
                {% elseif app.user %}
                    <form method="post" action="{{ path('app_article_export_pdf', {'slug': article.slug}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('generate-pdf' ~ article.id) }}">
                        <button type="submit" class="btn btn-outline-secondary">Exporter en PDF</button>
                    </form>
                {% endif %}

            </div>

            <h2>Commentaires</h2>

            {% for comment in article.comments %}
                <div class="comment">
                    <strong>{{ comment.user.email }}</strong> — <em>{{ comment.createdAt|date('d/m/Y H:i') }}</em>
                    <p>{{ comment.content }}</p>
                </div>
            {% else %}
                <p>Pas encore de commentaire.</p>
            {% endfor %}

            {% if app.user %}
                {{ form_start(form) }}
                    {{ form_row(form.content) }}
                    <button type="submit">Poster mon commentaire</button>
                {{ form_end(form) }}
            {% else %}
                <p><a href="{{ path('app_login') }}">Connectez-vous</a> pour commenter.</p>
            {% endif %}

            {% if app.user %}
                {% if pdfExists %}
                    <a href="{{ asset('pdfs/' ~ pdfFilename) }}" class="btn btn-outline-secondary">
                        Télécharger le PDF
                    </a>
                {% elseif generationRequested %}
                    <p class="text-muted">PDF en cours de génération… Revenez dans quelques instants.</p>
                {% else %}
                    <form action="{{ path('app_article_export_pdf', { slug: article.slug }) }}" method="POST">
                        <input type="hidden" name="_token" value="{{ csrf_token('generate-pdf' ~ article.id) }}">
                        <button type="submit" class="btn btn-outline-primary">
                            Créer un PDF
                        </button>
                    </form>
                {% endif %}
            {% endif %}


            <a href="{{ path('app_home') }}" class="btn btn-outline-primary mt-4">&larr; Retour aux articles</a>
        </div>
    </div>
</div>
{% endblock %}
