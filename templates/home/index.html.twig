{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>AIA blog</h1>
    <h2>Nos articles les plus lik√©s</h2>
    {% if mostLikedArticles is not empty %}
        <ul>
            {% for article in mostLikedArticles %}
                <li>
                    <h3>{{ article.title }}</h3>
                    <p><strong>Artist:</strong> {{ article.artist or 'N/A' }}</p>
                    <p>{{ article.content[:150] }}...</p>
                    <p><strong>Likes:</strong> {{ article.getLikesCount() }}</p>
                    <p><a href="{{ path('app_article', { 'slug': article.slug }) }}">Read More</a></p>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No articles available.</p>
    {% endif %}
</div>
{% endblock %}
