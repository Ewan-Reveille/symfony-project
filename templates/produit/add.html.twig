{% extends 'base.html.twig' %}

{% block title %}Ajouter un produit{% endblock %}

{% block body %}
<div class="container mt-5">
	<h1>Ajouter un produit</h1>

	{{ form_start(form, {'attr': {'data-turbo': 'false'}}) }}
		<div class="mb-3">
			{{ form_label(form.nom, 'Nom du Produit') }}
			{{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.nom) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.prix, 'Prix du Produit') }}
			{{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.prix) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.description, 'Description du produit') }}
			{{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
			{{ form_errors(form.description) }}
		</div>

		<div class="mb-3">
			{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
		</div>

		{{form_end(form)}}
	</div>

{% endblock %}
